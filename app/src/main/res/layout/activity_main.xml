<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackr"
    android:orientation="vertical"

    tools:context=".MainActivity">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:orientation="vertical">
    <ImageView
        android:id="@+id/registr"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        app:srcCompat="@drawable/registration" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:hint="Введите свой Nickname"
        android:id="@+id/editReg"/>

    <Button
        android:id="@+id/btnReg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="regOnClick"
        android:text="Зарегистрироваться">

    </Button>
</LinearLayout>
    <ImageView
        android:id="@+id/regulations"
        android:layout_width="match_parent"
        android:layout_height="280dp"
        app:srcCompat="@drawable/regulations" />

</LinearLayout>